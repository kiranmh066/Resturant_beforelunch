@model RestaurantEntity.Order;
@{
    ViewData["Title"] = "Speciality";
}

<h1>Speciality/ Assign Here Itself</h1>
<div>
    @if(true){
        TempData["speciality"] = @Model.Food.FoodCuisine;
        TempData["foodname"] = @Model.Food.FoodName;
    }    
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Add Order </h2>
    <div class="form-group">
        <label>Food Name</label>
        <input type="number" asp-for="Food.FoodName" min="0" max="10" class="form-control" placeholder="Enter Food Name" />
    </div>
    <div class="form-group">
        <label>Order Quantity</label>
        <input type="number" asp-for="Quantity" min="0" max="10" class="form-control" placeholder="Enter Order quantity" />
    </div>
    <div class="form-group">
        <label>Order Time</label>
        <input type="datetime-local" asp-for="OrderDate" class="form-control" placeholder="Enter Order Time" required />
    </div>
    <div class="form-group">
        <label>Food Id</label>
        <input type="text" asp-for="FoodId" class="form-control" placeholder="Enter Food ID" required />
    </div>
    <div class="form-group">
        <label>Hall Table Id</label>
        <input type="text" asp-for="HallTableId" class="form-control" placeholder="Enter Hall Table ID" required />
    </div>
   


    @* <div class="form-group">
    <label>Order Poster</label>
    <input type="file" id="poster" name="poster" class="form-control" required />
    </div>
    *@
    <input type="submit" value="Save" class="btn btn-outline-success" /> @*submit display message for required option required works only with submit*@
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @*submit sends form to server thats why we use submit not button type  *@
    @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in Ordercontroller *@
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>



